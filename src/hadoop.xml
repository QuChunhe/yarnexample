    <value>256</value>
  </property>

  <property>  
    <name>yarn.am.required-virtual-cores</name>  
    <value>1</value>
  </property>
  
  <property>  
    <name>yarn.am.intervalMs</name>  
    <value>3000</value>
  </property>
  
  <property>  
